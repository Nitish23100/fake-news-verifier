{
  "designSystem": {
    "name": "Fitness Home Workout Platform",
    "version": "1.0.0",
    "description": "Design system for a home fitness and workout platform with dark theme and orange accents"
  },
  "colors": {
    "primary": {
      "orange": "#FF6B35",
      "orangeHover": "#E55A2B",
      "orangeLight": "#FF8A5C"
    },
    "secondary": {
      "teal": "#2DD4BF",
      "tealLight": "#5EEAD4"
    },
    "neutral": {
      "black": "#000000",
      "darkGray": "#1A1A1A",
      "mediumGray": "#333333",
      "lightGray": "#666666",
      "white": "#FFFFFF",
      "offWhite": "#F8F8F8"
    },
    "background": {
      "primary": "#000000",
      "secondary": "#1A1A1A",
      "overlay": "rgba(0, 0, 0, 0.7)"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#CCCCCC",
      "muted": "#999999",
      "accent": "#FF6B35"
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": "'Inter', 'Helvetica Neue', Arial, sans-serif",
      "heading": "'Inter', 'Helvetica Neue', Arial, sans-serif",
      "body": "'Inter', 'Helvetica Neue', Arial, sans-serif"
    },
    "fontSizes": {
      "hero": {
        "desktop": "4rem",
        "tablet": "3rem",
        "mobile": "2.5rem"
      },
      "h1": {
        "desktop": "3rem",
        "tablet": "2.5rem",
        "mobile": "2rem"
      },
      "h2": {
        "desktop": "2.5rem",
        "tablet": "2rem",
        "mobile": "1.75rem"
      },
      "h3": {
        "desktop": "2rem",
        "tablet": "1.75rem",
        "mobile": "1.5rem"
      },
      "body": {
        "large": "1.25rem",
        "regular": "1rem",
        "small": "0.875rem"
      },
      "navigation": "1rem",
      "button": "1rem"
    },
    "fontWeights": {
      "light": 300,
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.75
    },
    "letterSpacing": {
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "6rem",
    "5xl": "8rem"
  },
  "layout": {
    "maxWidth": {
      "container": "1200px",
      "content": "800px",
      "narrow": "600px"
    },
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1200px"
    },
    "grid": {
      "columns": 12,
      "gutter": "1.5rem"
    }
  },
  "components": {
    "navigation": {
      "height": "80px",
      "backgroundColor": "transparent",
      "backdropFilter": "blur(10px)",
      "position": "fixed",
      "zIndex": 1000,
      "padding": {
        "horizontal": "2rem",
        "vertical": "1rem"
      },
      "logo": {
        "size": "2rem",
        "color": "#FF6B35"
      },
      "links": {
        "color": "#FFFFFF",
        "hoverColor": "#FF6B35",
        "fontSize": "1rem",
        "fontWeight": 500,
        "spacing": "2rem"
      }
    },
    "buttons": {
      "primary": {
        "backgroundColor": "#FF6B35",
        "color": "#FFFFFF",
        "padding": "0.875rem 2rem",
        "borderRadius": "0.375rem",
        "fontSize": "1rem",
        "fontWeight": 600,
        "textTransform": "uppercase",
        "letterSpacing": "0.025em",
        "border": "none",
        "cursor": "pointer",
        "transition": "all 0.3s ease",
        "hover": {
          "backgroundColor": "#E55A2B",
          "transform": "translateY(-2px)",
          "boxShadow": "0 8px 25px rgba(255, 107, 53, 0.3)"
        }
      },
      "secondary": {
        "backgroundColor": "transparent",
        "color": "#FFFFFF",
        "border": "2px solid #FFFFFF",
        "padding": "0.875rem 2rem",
        "borderRadius": "0.375rem",
        "fontSize": "1rem",
        "fontWeight": 600,
        "textTransform": "uppercase",
        "letterSpacing": "0.025em",
        "cursor": "pointer",
        "transition": "all 0.3s ease",
        "hover": {
          "backgroundColor": "#FFFFFF",
          "color": "#000000"
        }
      },
      "playButton": {
        "size": "80px",
        "backgroundColor": "#FFFFFF",
        "color": "#FF6B35",
        "borderRadius": "50%",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "fontSize": "2rem",
        "cursor": "pointer",
        "transition": "all 0.3s ease",
        "hover": {
          "transform": "scale(1.1)",
          "boxShadow": "0 12px 30px rgba(255, 255, 255, 0.3)"
        }
      }
    },
    "hero": {
      "minHeight": "100vh",
      "backgroundColor": "#000000",
      "backgroundImage": "linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6))",
      "display": "flex",
      "alignItems": "center",
      "padding": {
        "horizontal": "2rem",
        "vertical": "4rem"
      },
      "textAlign": "left"
    },
    "cards": {
      "backgroundColor": "#1A1A1A",
      "borderRadius": "0.75rem",
      "padding": "2rem",
      "border": "1px solid #333333",
      "transition": "all 0.3s ease",
      "hover": {
        "transform": "translateY(-4px)",
        "boxShadow": "0 12px 30px rgba(0, 0, 0, 0.3)",
        "borderColor": "#FF6B35"
      }
    },
    "forms": {
      "input": {
        "backgroundColor": "#1A1A1A",
        "border": "1px solid #333333",
        "borderRadius": "0.375rem",
        "padding": "0.875rem 1rem",
        "color": "#FFFFFF",
        "fontSize": "1rem",
        "transition": "all 0.3s ease",
        "focus": {
          "borderColor": "#FF6B35",
          "outline": "none",
          "boxShadow": "0 0 0 3px rgba(255, 107, 53, 0.1)"
        }
      }
    }
  },
  "effects": {
    "shadows": {
      "small": "0 2px 8px rgba(0, 0, 0, 0.1)",
      "medium": "0 4px 16px rgba(0, 0, 0, 0.15)",
      "large": "0 8px 32px rgba(0, 0, 0, 0.2)",
      "accent": "0 8px 25px rgba(255, 107, 53, 0.3)"
    },
    "borderRadius": {
      "small": "0.25rem",
      "medium": "0.375rem",
      "large": "0.75rem",
      "full": "50%"
    },
    "transitions": {
      "fast": "0.15s ease",
      "normal": "0.3s ease",
      "slow": "0.5s ease"
    },
    "animations": {
      "fadeIn": {
        "duration": "0.6s",
        "easing": "ease-out"
      },
      "slideUp": {
        "duration": "0.8s",
        "easing": "ease-out",
        "transform": "translateY(30px) to translateY(0)"
      },
      "scaleIn": {
        "duration": "0.4s",
        "easing": "ease-out",
        "transform": "scale(0.9) to scale(1)"
      }
    }
  },
  "content": {
    "hero": {
      "headline": {
        "primary": "STAY AT HOME",
        "secondary": "STAY HEALTHY"
      },
      "subheadline": "Stay in shape even at home, workout at home will help you to stay healthy easily wherever and whenever.",
      "cta": {
        "primary": "GET STARTED",
        "secondary": "Watch Video"
      }
    },
    "messaging": {
      "tone": "motivational, accessible, empowering",
      "voice": "friendly, encouraging, professional",
      "keywords": ["home workout", "fitness", "healthy", "convenient", "accessible"]
    }
  },
  "imagery": {
    "style": "high-quality photography, realistic, diverse representation",
    "treatment": "warm lighting, action shots, home environment",
    "subjects": "people exercising at home, fitness equipment, healthy lifestyle",
    "overlay": "dark gradient overlay for text readability"
  },
  "iconography": {
    "style": "simple, modern, outlined",
    "playButton": {
      "style": "filled triangle pointing right",
      "color": "#FF6B35"
    },
    "logo": {
      "style": "geometric checkmark in circle",
      "color": "#FF6B35"
    }
  },
  "accessibility": {
    "contrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    },
    "focusStates": {
      "color": "#FF6B35",
      "width": "3px",
      "style": "solid",
      "offset": "2px"
    },
    "altText": "descriptive, concise, contextual"
  },
  "responsive": {
    "approach": "mobile-first",
    "imageOptimization": true,
    "touchTargets": "minimum 44px",
    "breakpointStrategy": "fluid scaling with breakpoint adjustments"
  },
  "brandPersonality": {
    "attributes": [
      "motivational",
      "accessible",
      "modern",
      "energetic",
      "trustworthy",
      "inclusive"
    ],
    "avoidances": [
      "intimidating",
      "overly complex",
      "exclusive",
      "boring",
      "clinical"
    ]
  }
}